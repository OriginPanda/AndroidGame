<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundgame"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startbutton"
            android:layout_width="311dp"
            android:layout_height="120dp"
            android:layout_marginStart="71dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="72dp"
            android:backgroundTint="@color/forest_green"
            android:fontFamily="@font/arcade"
            android:shadowDx="-10"
            android:shadowDy="20"
            android:shadowRadius="7"
            android:text="Start"
            android:textColor="@color/white"
            android:textSize="70sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            tools:context=".StartFragment" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonRight"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="83dp"
            android:layout_height="79dp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/light_grey"
            android:fontFamily="@font/arcade"
            android:rotation="-90"
            android:text="V"
            android:textSize="60sp"
            app:layout_constraintBottom_toTopOf="@+id/startbutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentType"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonLeft"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="83dp"
            android:layout_height="79dp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/light_grey"
            android:fontFamily="@font/arcade"
            android:rotation="90"
            android:text="V
"
            android:textSize="60sp"
            app:layout_constraintBottom_toTopOf="@+id/startbutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentType"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/fragmentType"
            android:layout_width="0dp"
            android:layout_height="113dp"
            android:fontFamily="@font/arcade"
            android:gravity="center_horizontal|center_vertical"
            android:text="Addition"
            android:textAlignment="center"
            android:textColor="#EF8635"
            android:textColorHighlight="#F80000"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/startbutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintVertical_bias="0.172" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/arcade"
            android:gravity="center_horizontal|center_vertical"
            android:text=" Siema \n Matma"
            android:textAlignment="center"
            android:textColor="#E88132"
            android:textColorHighlight="#F80000"
            android:textSize="96sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>